<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>My Servlet</servlet-name>
    <servlet-class>com.java.servdemo.ServletDemo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>My Servlet</servlet-name>
    <url-pattern>/name</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>Application Filter</filter-name>
    <filter-class>com.java.servdemo.filter.ApplicationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>Service Filter</filter-name>
    <filter-class>com.java.servdemo.filter.ServiceFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Application Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>Service Filter</filter-name>
    <url-pattern>/service</url-pattern>
  </filter-mapping>
</web-app>

